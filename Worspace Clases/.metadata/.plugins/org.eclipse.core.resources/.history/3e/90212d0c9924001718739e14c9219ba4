package archivos;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

public class Main {

	public static void main(String[] args) {
		
		// creamos el objeto File que representa al archivo en memoria
		File f1 = new File("src/achivo.txt");
		File f2 = new File("/direc"); 
		f1.createNewFile();
		
		//Creamos un fileWriter y un BufferedWriter 
		try(BufferedWriter bw = new BufferedWriter(new FileWriter(f1,false))){
			
			//creamos el archivo SI todavia no existe fisicamente
			System.out.println(f1.isFile());
			//creamos el archivo SI todavia no existe fisicamente
			bw.write("Escribiendo desde el buffer con try con recursos");
		} catch (IOException e) {
			e.printStackTrace();
		}
		
		//Lectura
		
		
		try(BufferedReader bw = new BufferedReader(new FileReader(f1))){
			
		
			//creamos el archivo SI todavia no existe fisicamente
			System.out.println(f1.isFile());
			//creamos el archivo SI todavia no existe fisicamente
			bw.write("Escribiendo desde el buffer con try con recursos");
		} catch (IOException e) {
			e.printStackTrace();
		}
		
		
		
		

	}

}
