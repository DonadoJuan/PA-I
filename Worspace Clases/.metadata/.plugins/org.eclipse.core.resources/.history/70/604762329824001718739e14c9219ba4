package archivos;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

public class Main {

	public static void main(String[] args) {
		
		// creamos el objeto File que representa al archivo en memoria
		File f1 = new File("src/achivo.txt");
		File f2 = new File("/direc"); 
	
		try(BufferedWriter bw = new BufferedWriter(new FileWriter(f1,true))){
			
			f1.createNewFile();
			//creamos el archivo SI todavia no existe fisicamente
			System.out.println(f1.isFile());
			//creamos el archivo SI todavia no existe fisicamente
			bw.write("Escribiendo desde el buffer con try con recursos");
		} catch (IOException e) {
			e.printStackTrace();
		}
		
		
		
		

	}

}
